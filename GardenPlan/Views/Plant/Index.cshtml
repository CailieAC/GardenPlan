@model List<GardenPlan.Models.Plant>

@{
    ViewData["Title"] = "Index";
}

@*@if (Model.Count == 0)
{
    <p>No plants added yet!</p>
}*@

<p>
    <a asp-action="Create">Add a New Plant</a>
</p>

    <table class="table">

        <tr>
            <th>Name</th>
            <th>Category</th>
        </tr>

        @foreach (var plant in Model)
        {
        <tr>
            <td>@Html.ActionLink(plant.PlantName, "Details", new { PlantId = plant.Id })</td>
            <td>@plant.PlantCategory</td>
        </tr>
        }
    </table>
